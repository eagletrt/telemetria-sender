{
  "name": "chimera-telemetria-sender",
  "version": "1.0.0",
  "description": "The telemetry of eagletrt",
  "scripts": {
    "transpile": "npx eagletrt-cg generate -s ./models/structure.model.json -c ./models/config.model.json",
    "validate:config": "ajv validate -s ./models/config.schema.json -d ./config.json",
    "compile": "./compile.sh",
    "start": "npm run validate:config && sudo ./sender.out config.json",
    "serve": "npm run compile && npm run start",
    "enable": "./enable_signal.sh",
    "idle": "./idle_signal.sh",
    "commit": "git add . && cz",
    "cicd:add": "cd utils && git submodule add -b build https://github.com/eagletrt/can-cicd",
    "cicd:update": "git submodule foreach git pull",
    "cicd:remove": "git submodule deinit -f -- utils/can-cicd && rm -rf .git/modules/utils/can-cicd && git rm -f utils/can-cicd"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eagletrt/fenice-telemetria-sender.git"
  },
  "author": "Euber Developer",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eagletrt/fenice-telemetria-sender/issues"
  },
  "homepage": "https://github.com/eagletrt/fenice-telemetria-sender#readme",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.2.17",
    "ajv-cli": "^5.0.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0"
  },
  "dependencies": {
    "@eagletrt/code-generator": "^4.2.1"
  }
}
